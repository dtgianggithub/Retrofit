<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:text="ProductCatalogueID"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
            <EditText
                android:id="@+id/txtProductCatalogueID"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="pageSize"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
            <EditText
                android:id="@+id/txtpageSize"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="UserID"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
            <EditText
                android:id="@+id/txtUserID"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="CountryCode"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
            <EditText
                android:id="@+id/txtCountryCode"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="PageIndex"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
            <EditText
                android:id="@+id/txtPageIndex"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnGet"
        android:text="Get Data"
        />

    <TextView
        android:id="@+id/lblContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
